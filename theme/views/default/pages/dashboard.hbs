<!-- page header -->
<div class="d-lg-none page-header border-0 py-0">
    <h1 class="text-dark-m3 pb-0 mb-0 text-125">
        Dashboard
    </h1>

    <!-- page tools -->
    <div class="page-tools d-none">
        <div class="action-buttons text-nowrap">
            <a class="btn bgc-white btn-light-secondary mx-0" href="#" data-toggle="tooltip" title="Details">
              <i class="fa fa-search-plus text-blue"></i>
            </a>
            <a class="btn bgc-white btn-light-secondary mx-0" href="#" data-toggle="tooltip" title="Print">
                <i class="fa fa-print text-purple"></i>
            </a>
            <a class="btn bgc-white btn-light-secondary mx-0" href="#" data-toggle="tooltip" title="Remove">
                <i class="fa fa-trash-alt text-danger"></i>
            </a>
        </div>
    </div>
</div>




<!-- stat boxes -->
<div class="row px-2 mt-3">
 {{> page/infobox}}
</div>




<div class="row mt-2 mt-lg-4 pt-2">
    <!-- sale stats chart -->
    <div class="col-12 col-lg-7">
        {{> page/sales-stats-card}}
    </div>

    <!-- revenue/expense bar chart -->
    <div class="col-12 col-lg-5 mt-3 mt-lg-0">
        {{> page/revenue-expense-card}}
    </div>
</div>




<div class="row mt-4 pt-1">
    <!-- demographics chart -->
    <div class="col-12 col-lg-4">
        <div class="bcard card h-100 pt-0 mx-auto">
            <div class="card-header border-0">
                <h5 class="card-title text-120 text-dark-m1 pl-1">
                    Demographics
                    <span class="text-dark-l2 text-80 d-block">Last 7 days</span>
                </h5>

                <div class="card-toolbar no-border align-self-start">
                    {{> page/default-dropdown}}
                </div>
            </div>

            <div class="card-body p-3 h-100 d-flex align-items-center">
                <canvas id="demographics-chart" height="110"></canvas>
            </div><!-- .card-body -->
        </div>
    </div>


    <!-- traffic sources chart -->
    <div class="col-12 col-lg-4 mt-2 mt-lg-0">
        <div class="bcard card h-100 pt-0 mx-auto">

            <div class="card-header border-0">
                <h5 class="card-title text-120 text-dark-m1 pl-1">
                    Traffic Sources
                    <span class="text-dark-l2 text-80 d-block">Last 7 days</span>
                </h5>

                <div class="card-toolbar no-border align-self-start">
                    {{> page/default-dropdown}}
                </div>
            </div>

            <div class="card-body p-3">
                <div class="d-flex align-items-start justify-content-center flex-wrap">
                    <div class="pos-rel"> 
                        <div class="position-center text-center text-default-d2 mt-n3">
                            <span>total</span>
                            <span class="mt-n2 d-block text-200 text-secondary-d3 text-600">55k</span>
                        </div>

                        <canvas id="traffic-source-chart" class="pos-rel mb-3" style="height: 150px; width: 150px; max-height: 150px; max-width: 150px;"></canvas>
                        
                    </div>
                </div>
            </div><!-- .card-body -->

        </div>
    </div>


    <!-- user devices chart -->
    <div class="col-12 col-lg-4 mt-2 mt-lg-0">
        <div class="bcard card h-100 pt-0 mx-auto">

            <div class="card-header border-0">
                <h5 class="card-title text-120 text-dark-m1 pl-1">
                    User Devices
                    <span class="text-dark-l2 text-80 d-block">Last 7 days</span>
                </h5>

                <div class="card-toolbar no-border align-self-start">
                    {{> page/default-dropdown}}
                </div>
            </div>

            <div class="card-body p-3">
                <div class="d-flex align-items-start justify-content-center flex-wrap">
                    <div class="pos-rel">
                        <div class="position-center text-center text-default-d2 mt-n3">
                            <span>total</span>
                            <span class="mt-n2 d-block text-200 text-secondary-d3 text-600">62k</span>
                        </div>
                        <canvas id="user-device-chart" class="pos-rel mb-3" style="height: 150px; width: 150px; max-height: 150px; max-width: 150px;"></canvas>
                    </div>
                </div>
            </div><!-- .card-body -->

        </div>
    </div>

</div><!-- /.row -->




<div class="row mt-2 mt-lg-4 pt-2">
    <!-- products table -->
    <div class="col-12 col-lg-5 mt-2 mt-lg-0">
        {{> page/products}}
    </div>

    <!-- members table -->
    <div class="col-12 col-lg-7 mt-3 mt-lg-0">
        {{> page/members}}
    </div>
</div>



<div class="row mt-4">
    <!-- orders table -->
    <div class="col-12 col-lg-9">
        {{> page/orders}}
    </div>

    <!-- some extra stats -->
    <div class="col-12 col-lg-3 mt-2 mt-lg-0">
        <div class="h-100 row mt-sm-3 mt-lg-0">

          <div class="col-12 col-sm-4 col-lg-12">
            <div class="bcard h-100 flex-grow-1 p-3 pt-1 pt-lg-2">
                <h6 class="text-dark-m2 text-90 text-600">
                    <span class="d-inline-block p-15 radius-2 bgc-green-tp1 mr-1"></span>
                    Total Orders
                </h6>
                <div class="text-primary-m1 text-center text-200">
                    <span class="text-120">32,809</span>
                </div>
            </div>
           </div>

           <div class="col-12 col-sm-4 col-lg-12 py-2 py-sm-0 py-lg-2">
            <div class="bcard h-100 flex-grow-1 p-3 pt-1 pt-lg-2">
                <h6 class="text-dark-m2 text-90 text-600">
                    <span class="d-inline-block p-15 radius-2 bgc-purple-tp1 mr-1"></span>
                    Daily Average
                </h6>
                <div class="text-primary-m1 text-center text-200">
                    <span class="text-120">285</span>
                </div>
            </div>
           </div>

           <div class="col-12 col-sm-4 col-lg-12">
            <div class="bcard h-100 flex-grow-1 p-3 pt-1 pt-lg-2">
                <h6 class="text-dark-m2 text-90 text-600">
                    <span class="d-inline-block p-15 radius-2 bgc-brown-tp1 mr-1"></span>
                    Average Amount
                </h6>
                <div class="text-primary-m1 text-center text-200">
                    <span class="text-120">$141</span>
                </div>
            </div>
           </div>

        </div>
    </div>
</div><!-- /.row -->




<div class="row mt-4 pt-25">
    <div class="col-12 col-lg-4 mt-lg-0">
        {{> page/activity}}
    </div>

    <div class="col-12 col-lg-4 mt-3 mt-lg-0">
        {{> page/task}}
    </div>

    <div class="col-12 col-lg-4 mt-3 mt-lg-0">
        {{> page/conversation}}
    </div>
</div>